page {
  background-color: #f4f4f4;
}

.container-body {
  width: 100%;
}

.container-header {
  display: flex;
  width: 100%;
  height: 90rpx;
  align-items: center;
  justify-content: flex-end;
  background: #ffffff;
  border-bottom: solid 1px #dfdfdf;
  margin-bottom: 20rpx;
}

.container-header .button {
  height: 70rpx;
  background-color: #f66620;
  color: #ffffff;
  font-size: 30rpx;
  text-align: center;
  line-height: 70rpx;
  padding: 0 20rpx;
  border-radius: 10rpx;
  margin-right: 30rpx;
}

.list-group {
  width: 100%;
  background-color: #ffffff;
}

.list-group .list-item {
  width: calc(100% - 30rpx);
  padding: 0 15rpx;
  height: 90rpx;
  display: flex;
  align-items: center;
  border-bottom: solid 1px #dfdfdf;
  font-size: 30rpx;
}

.list-group .list-item .label {
  width: max-content;
}

.list-group .list-item .title {
  padding-left: 10rpx;
  flex: 1;
}

.list-group .list-item .reply {
  width: max-content;
}

.list-group .item-empty {
  width: calc(100% - 30rpx);
  height: 300rpx;
  padding: 0 15rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.list-group .item-empty .empty-icon {
  width: 100rpx;
  height: 100rpx;
}

.list-group .item-empty .empty-icon image {
  width: 100rpx;
  height: 100rpx;
}
