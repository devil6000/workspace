/* 支付选择 */
.model_window {
  display: none;
  position: fixed;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, .5);
  z-index: 100;
  top: 0;
  left: 0;
}
.model_window .model_content {
  padding: 20rpx 0;
  width: 80%;
  background: #fff;
  margin: 40% auto;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-content: center;
  position: relative;
}
.model_content .model_title {
  padding-left: 10rpx;
  border-bottom: solid 1px #ccc;
}
.model_content .model_body {
  padding: 20rpx 10rpx 0 10rpx;
  display: flex;
  flex-direction: column;
}
.fui_item {
  height: 90rpx;
  line-height: 90rpx;
  background: #0a95e9;
  color: #fff;
  text-align: center;
  border-radius: 10rpx;
  margin-bottom: 10rpx;
}
.model_body .disabled {
  background: #CCC;
}
.model_show {
  display: block;
}