/* jujiwuliu/pages/issuer/publish/list/index.wxss */
page{
  background: #f4f4f4;
}

.item-list{
  background: #fff;
  border-top: 1px solid #e5e5e5;
  border-bottom: 1px solid #e5e5e5;
}


.item-list .item-title{
  font-size: 1rem;
  height: 50px;
  line-height: 50px;
  border-bottom:1px solid #e5e5e5;
}


.item-list .item-content{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding:0% 10pt;
  padding-top:8pt;
  padding-bottom:8pt;
}

.item-list .item-content .content-left{
  color: #999;
  width: 23%;
}
.item-list .item-content .content-left image{
  width: 100%;
}

.item-list .item-content .content-right {
  margin-left: 4%;
  width: 73%;
}
.item-list .item-content .content-right .detail{
  font-size: 0.75rem;
  display: flex;
  justify-content: space-between;
}

.item-list .item-content .content-right .detail .red{
  color:#f66620;
  display: inline;
}
.item-list .item-content .content-right .detail .gray{
  color:#999;
  display: inline;
}


/* 下面是nav */
.weui-navbar{
  background: #fff;
  border-top: 1px solid #e5e5e5;
}
.weui-navbar__slider{
  /*width: 33.33%;*/
  width: 25%;
}


.not_worker{
  padding:2%;
  text-align: center;
  font-size: 0.8rem;
}
.not_worker image{
  width: 40%;
}