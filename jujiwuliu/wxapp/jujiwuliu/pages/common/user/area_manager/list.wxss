/* jujiwuliu/pages/common/user/area_manager/list.wxss */
page {
  background-color: #f4f4f4;
}

.container-header {
  width: 100%;
  height: 100rpx;
  color: #ffffff;
  font-size: 35rpx;
}

.search-line {
  width: calc(100% - 20rpx);
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 10rpx;
}

.search-line .search-img {
  width: 50rpx;
  height: 55rpx;
}

.search-line .search-input {
  flex: 1;
  display: flex;
}

.search-line .search-input .input {
  flex: 1;
  overflow: hidden;
  font-size: 25rpx;
}

.picker-view {
  overflow: hidden;
  word-break: inherit;
}

.search-line .submit {
  color: #ffffff;
  font-size: 30rpx;
  text-align: center;
  background-color: #f66620;
}

.orange {
  background-color: #f66620 !important;
}

.blue {
  background-color: #0a95e9 !important;
}

.container-body {
  width: 100%;
}

.list-group {
  display: flex;
  flex-direction: column;
}

.title {
  height: 90rpx;
  line-height: 90rpx;
  padding-left: 20rpx;
  font-size: 35rpx;
  color: #d1d1d1;
}

.list-item {
  display: flex;
  flex-direction: row;
  background-color: #ffffff;
  margin-bottom: 20rpx;
  padding: 0 10rpx;
  width: calc(100% - 20rpx);
}

.list-item .avatar {
  width: 150rpx;
  height: 150rpx;
}


.list-item .list-item-line {
  flex: 1;
  display: flex;
  flex-direction: column;
  height: 150rpx;
  align-items: flex-start;
  font-size: 30rpx;
}

.list-item .list-item-line .name {
  width: 200rpx;
  font-size: 35rpx;
}

.list-item .list-item-line .mobile {
  flex: 1;
  padding-left: 20rpx;
  color: #0a95e9;
}

.list-item .list-item-line .label {
  flex: 1;
  color: #d1d1d1;
}

.list-group .item-empty {
  width: calc(100% - 30rpx);
  height: 300rpx;
  padding: 0 15rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.list-group .item-empty .empty-icon {
  width: 100rpx;
  height: 100rpx;
}

.list-group .item-empty .empty-icon image {
  width: 100rpx;
  height: 100rpx;
}

