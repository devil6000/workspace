    {{issuer.description}}
  </view>
</view>
<view class='item-list'>
  <view class='item-title'>
  <view>{{issuer.is_appoint?'指定人员':'接单人员'}}<text>(已接单的点击头像可查看订单)</text></view>
  </view>
  <view  class='item-content'>
        <view class='release-images'>
            <view >
            <block wx:for="{{issuer.accepts}}" wx:key="{{index}}" >
                <view class='release-image' bindtap='url_order' data-orderid="{{item.order.id}}">
                    <image src='{{item.user.avatar}}' mode='aspectFit'></image>
                    <view class='mark' wx:if="{{!item.order}}" >未接单</view>
                    <view class='mark' wx:elif="{{(item.order.status==0 || item.order.status==1) && item.order.apply==0}}">已接单</view>
                    <view class='mark' wx:elif="{{item.order.status==3 }}">已完成</view>
                    <view class='mark' wx:elif="{{item.order.status==4 }}">已取消</view>
                    <view class='mark' wx:elif="{{item.order.apply==1 }}">申请打款</view>
                </view>
               
            </block>
            </view>
        </view>
  </view>
</view>

