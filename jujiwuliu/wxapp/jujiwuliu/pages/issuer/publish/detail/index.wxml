<!-- 支付方式选择 -->
<view class='model_window {{modalPayBtns?"model_show":""}}' bindtap='hide_paybtns'>
  <view class='model_content'>
    <view class='model_title'>请选择支付方式</view>
    <view class='model_body'>
      <view data-paytype='1' bindtap='check_pay' class='fui_item' >微信支付</view>
      <view data-paytype='2' bindtap='check_pay' class="fui_item {{!credit_enough?'disabled':''}}" >余额支付<text wx:if="{{!credit_enough}}">(余额不足以支付)</text></view>
    </view>
  </view>
</view>

    
  
<view  class='modal_receipt_list' wx:if="{{receipt_model_show}}">
    <view class='back' bindtap='receipt_model_hide'></view>
    <view class='receipt_body'> 
        <radio-group class="receipt_list" bindchange="firm_check">
                <view class='list_item'  wx:if="{{firms==0}}" >请添加开票公司信息</view>
                <label class="list_item" wx:for="{{firms}}" wx:key='index' wx:for-index="index">
                <view class='firm_detail'>
                    <view>{{item.firm_name}}</view>
                    <view>{{item.firm_identifier}}</view>
                    <view>{{item.firm_email}}</view>
                </view>
                <view class='btn_edit' >
                    <radio value="{{item.id}}" checked="{{item.checked}}" />
                </view>
            </label>
        </radio-group>
        <view class='btn btn-draw_money' bindtap='submit_invoice'>提交</view>
    </view>
</view>

 
<view  class='modal_make_money' wx:if="{{make_money_model}}">
<form bindsubmit="submit_make_money">
    <view class='back' bindtap='make_money_model_hide'></view>
    <view class='make_money_body'> 
        <radio-group class="make_money_check" bindchange="make_money_check">
            <label class="list_item" >
                    <radio value="1"   />
                    立即打款
            </label>
            <label class="list_item" >
                    <radio value="2"  />
                    选择打款时间
            </label>
        </radio-group>
        <view class='make_money_time' wx:if="{{make_money_check==2}}" >
          打款时间：
            <picker mode="multiSelector" value="{{dateTime}}" bindchange="getDateTime" bindcolumnchange="getDateTimeColumn" range="{{dateTimeArray}}">    
            <input hidden='true' name='makemoneytime' value='{{starttime}}'></input>
            <view class="tui-picker-detail"  style='ont-size:28rpx;'>{{starttime}}
            </view>  
          </picker>
        </view>
          <button class='btn btn-draw_money' form-type="submit">提交</button>
    </view>
    </form>
</view>

