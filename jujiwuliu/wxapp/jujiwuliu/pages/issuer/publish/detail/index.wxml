<view class='item-list'>
  <view class='item-title'>
  <view>货物图片</view>
  </view>
  <view class='item-content'>
    <block wx:for="{{issuer.images}}" data-item="item" wx:for-index="idx">
      <image mode="widthFix" src='{{siteinfo.attachurl}}{{item}}'></image>
    </block>
  </view>
</view>

<view class='item-list'>
  <view class='item-title'>
  <view>货物描述</view>
  </view>
